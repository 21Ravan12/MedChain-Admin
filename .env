# Flask environment configuration
FLASK_ENV=production
DEBUG=false

# Application secret keys (replace with secure values)
SECRET_KEY=your_super_secure_secret_key
JWT_SECRET_KEY=your_256_bit_secret_key

# Database configuration (replace with actual credentials)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Email server configuration (replace with actual credentials)
MAIL_SERVER=smtp.mailserver.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER="Your App Name <noreply@example.com>"

# Encryption keys (replace with secure values)
FERNET_KEY=your_fernet_key_here
HMAC_KEY=your_hmac_secret_key_here

# SSL certificate paths (update with actual paths)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Application host and port
HOST=0.0.0.0
PORT=5000

# Redis configuration (replace with actual credentials)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Password policy
PASSWORD_MIN_LENGTH=12
PASSWORD_COMPLEXITY=3 

# Account lockout policy
ACCOUNT_LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION=900